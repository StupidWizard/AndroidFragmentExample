<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <!-- Base custom ActionBar -->
    <style name="BaseActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">disableHome|showCustom</item>
        <item name="android:divider">@null</item>
        <item name="android:background">@null</item>
    </style>


    <style name="Main" parent="BaseAppTheme">
        <item name="android:actionBarStyle">@style/Main.ActionBar</item>
    </style>

    <style name="Main.ActionBar" parent="BaseActionBar">
        <item name="android:customNavigationLayout">@layout/actionbar_custom</item>
    </style>

</resources>
